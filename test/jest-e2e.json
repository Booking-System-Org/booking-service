{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "modulePaths": ["<rootDir>/../"],
  "testTimeout": 30000,
  "forceExit": true,
  "detectOpenHandles": true,
  "verbose": true,
  "silent": false,
  "preset": "ts-jest"
}
